<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="photoDetailsBox" alignment="CENTER" prefHeight="391.0" prefWidth="464.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PhotoDetailsController">
    <ImageView fx:id="photoImageView" fitHeight="273.0" fitWidth="255.0" />
    <Label fx:id="captionLabel" />
    <Label fx:id="modificationTimeLabel" />
    <Label fx:id="tagsLabel" />
   <AnchorPane prefHeight="200.0" prefWidth="200.0">
      <children>
         <Button layoutX="390.0" onAction="#movePhoto" prefHeight="26.0" prefWidth="50.0" text="Move" />
      </children>
   </AnchorPane>
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="recaptionButton" onAction="#recaptionPhoto" prefHeight="26.0" prefWidth="72.0" text="Recaption" />
        <Button fx:id="deleteButton" onAction="#removePhoto" text="Delete" />
        <Button fx:id="closeButton" onAction="#closeWindow" prefHeight="26.0" prefWidth="49.0" text="Close" />
        <Button fx:id="addTags" onAction="#addTags" prefHeight="26.0" prefWidth="66.0" text="Add tags" />
      <Button fx:id="deleteTag" onAction="#deleteTag" text="Delete Tag" />
      <Button onAction="#copyPhoto" prefHeight="26.0" prefWidth="50.0" text="Copy" />

    </HBox>
</VBox>
